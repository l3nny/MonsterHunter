<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_20dp"
        android:background="@color/colorLight"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_head" />


        <LinearLayout
            android:id="@+id/item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/_20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_20dp"
                android:gravity="center_vertical"
                android:text="@{itemData.full_name}"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_20sp" />


            <LinearLayout
                android:id="@+id/item_fork_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_defense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35dp"
                    android:text="@{itemData.defense+``}"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/item_shield"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginStart="@dimen/_35dp"
                    app:srcCompat="@drawable/ic_shield" />

                <ImageView
                    android:id="@+id/item_decor"
                    android:layout_width="@dimen/icon_size"
                    android:layout_marginStart="@dimen/_35dp"
                    android:layout_height="@dimen/icon_size"
                    app:srcCompat="@drawable/ic_deco" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>